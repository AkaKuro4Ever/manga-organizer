<!DOCTYPEhtml>
<html>
<head>
  <title><%=@author.name%></title>

</head>
  <body>
    <h1><%=@author.name%></h1>
    <h3> Works </h3>
    <%@author.books.all.each_with_index do |book, i|%>
    <p><%=i+1%>. <%=book.title%></p>
    
    <h3> Genres </h3>
    <%@author.genres.all.each_with_index do |genre, i|%>
    <p><%=i+1%>. <%=genre.name%></p>
    <%end%>
  </body>
</html>
