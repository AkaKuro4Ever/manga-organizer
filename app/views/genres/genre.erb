<!DOCTYPEhtml>
<html>
<head>
  <title><%=@genre.name%></title>

</head>
  <body>
    <h1><%=@genre.name%></h1>
    <h3> Works </h3>
    <%@genre.books.all.uniq.each_with_index do |book, i|%>
    <p><%=i+1%>. <%=book.title%></p>
      <%if book.volume !=nil%>
      <p>Volume: <%=book.volume%></p>
      <%end%>
    <a href="/manga/<%=book.id%>">Book Details</a>
    <%end%>
    <h3> Author(s) </h3>
    <%@genre.authors.all.uniq.each_with_index do |author, i|%>
    <p><%=i+1%>. <%=author.name%></p>
    <a href="/authors/<%=author.id%>">Author Details</a>
    <%end%>
    <br></br>
    <a href="/users/<%=current_user.id%>">Back To My Profile</a>
    <br></br>
    <a href="/manga">View All Manga</a>
    <br></br>
    <a href="/authors">View All Authors</a>
    <br></br>
    <a href="/genres">View All Genres</a>
  </body>
</html>
