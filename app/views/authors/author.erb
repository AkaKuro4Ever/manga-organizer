<!DOCTYPEhtml>
<html>
<head>
  <title><%=@author.name%></title>

</head>
  <body>
    <h1><%=@author.name%></h1>
    <h3> Works </h3>
    <%@author.books.each_with_index do |book, i|%>
    <p><%=i+1%>. <%=book.title%></p>
    <a href="/manga/<%=book.id%>">Book Details</a>
    <%end%>

    <h3> Genres </h3>
    <%@author.genres.each_with_index do |genre, i|%>
    <p><%=i+1%>. <%=genre.name%></p>
    <a href="/genres/<%=genre.id%>">Genre Details</a>
    <%end%>
    <br></br>
    <%if logged_in?%>
    <a href="/users/<%=current_user.id%>">Back To My Profile</a>
    <%end%>
    <br></br>
    <a href="/manga">View All Manga</a>
    <br></br>
    <a href="/authors">View All Authors</a>
    <br></br>
    <a href="/genres">View All Genres</a>
  </body>
</html>
